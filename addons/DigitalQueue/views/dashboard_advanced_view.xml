<odoo>
    <!-- Stats model views: tree, graph, pivot -->
    <record id="view_ticket_stat_tree" model="ir.ui.view">
        <field name="name">digitalqueue.ticket.stat.tree</field>
        <field name="model">digitalqueue.ticket.stat</field>
        <field name="arch" type="xml">
            <tree string="Ticket stats">
                <field name="day"/>
                <field name="agent_id"/>
                <field name="ticket_count"/>
            </tree>
        </field>
    </record>

    <record id="view_ticket_stat_graph" model="ir.ui.view">
        <field name="name">digitalqueue.ticket.stat.graph</field>
        <field name="model">digitalqueue.ticket.stat</field>
        <field name="arch" type="xml">
            <graph string="Tickets per Agent per Day" type="bar">
                <field name="day" type="row"/>
                <field name="ticket_count" type="measure"/>
                <field name="agent_id" type="col"/>
            </graph>
        </field>
    </record>

    <record id="action_ticket_stat" model="ir.actions.act_window">
        <field name="name">Ticket Statistics</field>
        <field name="res_model">digitalqueue.ticket.stat</field>
        <field name="view_mode">graph,pivot,tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Use the graph to see tickets per agent per day. Group by agent or date to change visualization.</p>
        </field>
    </record>

    <!-- Menu under Dashboard -->
    <menuitem id="menu_ticket_stats"
              name="Stats Tickets"
              parent="menu_dashboard"
              action="action_ticket_stat"
              sequence="1"/>
</odoo>
